    private List<HierarchicalEntity> GetHierarchicalEntities()
    {
        var allEntities = entities.Items.ToList();
        var hierarchicalList = new List<HierarchicalEntity>();

        // First, add all SUPER AGENTs (top level)
        var superAgents = allEntities.Where(e => e.Role == EntityRole.SUPER_AGENT).ToList();
        
        foreach (var superAgent in superAgents)
        {
            // Check if this SUPER AGENT has children
            var hasChildren = allEntities.Any(e => e.Role == EntityRole.AGENT && e.SuperAgentId == superAgent.Id);
            
            hierarchicalList.Add(new HierarchicalEntity 
            { 
                Entity = superAgent, 
                Level = 0,
                ParentName = null,
                HasChildren = hasChildren,
                IsVisible = true // Top level entities are always visible
            });

            // Add their children (AGENTs) only if parent is expanded
            if (expandedEntities.GetValueOrDefault(superAgent.Id, true)) // Default to expanded
            {
                var agents = allEntities.Where(e => e.Role == EntityRole.AGENT && e.SuperAgentId == superAgent.Id).ToList();
                
                foreach (var agent in agents)
                {
                    // Check if this AGENT has children
                    var agentHasChildren = allEntities.Any(e => e.Role == EntityRole.TOKEN && e.AgentId == agent.Id);
                    
                    hierarchicalList.Add(new HierarchicalEntity 
                    { 
                        Entity = agent, 
                        Level = 1,
                        ParentName = superAgent.Username,
                        HasChildren = agentHasChildren,
                        IsVisible = true
                    });

                    // Add their children (TOKENs) only if parent is expanded
                    if (expandedEntities.GetValueOrDefault(agent.Id, true)) // Default to expanded
                    {
                        var tokens = allEntities.Where(e => e.Role == EntityRole.TOKEN && e.AgentId == agent.Id).ToList();
                        
                        foreach (var token in tokens)
                        {
                            // Check if this TOKEN has children
                            var tokenHasChildren = allEntities.Any(e => e.Role == EntityRole.GROUP && e.TokenId == token.Id);
                            
                            hierarchicalList.Add(new HierarchicalEntity 
                            { 
                                Entity = token, 
                                Level = 2,
                                ParentName = agent.Username,
                                HasChildren = tokenHasChildren,
                                IsVisible = true
                            });

                            // Add their children (GROUPs) only if parent is expanded
                            if (expandedEntities.GetValueOrDefault(token.Id, true)) // Default to expanded
                            {
                                var groups = allEntities.Where(e => e.Role == EntityRole.GROUP && e.TokenId == token.Id).ToList();
                                
                                foreach (var group in groups)
                                {
                                    hierarchicalList.Add(new HierarchicalEntity 
                                    { 
                                        Entity = group, 
                                        Level = 3,
                                        ParentName = token.Username,
                                        HasChildren = false, // GROUPs are leaf nodes
                                        IsVisible = true
                                    });
                                }
                            }
                        }
                    }
                }
            }
        }

        // Add any orphaned entities (entities without proper parent relationships)
        var orphanedEntities = allEntities.Where(e => 
            (e.Role == EntityRole.AGENT && string.IsNullOrEmpty(e.SuperAgentId)) ||
            (e.Role == EntityRole.TOKEN && string.IsNullOrEmpty(e.AgentId)) ||
            (e.Role == EntityRole.GROUP && string.IsNullOrEmpty(e.TokenId))
        ).ToList();

        foreach (var orphaned in orphanedEntities)
        {
            hierarchicalList.Add(new HierarchicalEntity 
            { 
                Entity = orphaned, 
                Level = 0, // Show at top level with warning
                ParentName = " Orphaned",
                HasChildren = false,
                IsVisible = true
            });
        }

        return hierarchicalList;
    }

