                currentHitRate = root.GetProperty("hitRate").GetDouble();
                totalSpins++;

                await JS.InvokeVoidAsync("console.log", $"Spin completed - TotalWin: {lastSpinResult?.TotalWin}, RTP: {currentRtp}, HitRate: {currentHitRate}");

